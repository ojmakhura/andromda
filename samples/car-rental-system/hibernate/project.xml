    	<dependency>
    		<groupId>xjavadoc</groupId>
    		<artifactId>xjavadoc</artifactId>
        	<version>${xjavadoc}</version>
    	</dependency>  
  		<dependency>
     		<groupId>xdoclet</groupId>
      		<artifactId>xdoclet</artifactId>
        	<version>${xdoclet}</version>
    	</dependency>   	
