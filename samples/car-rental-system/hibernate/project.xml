			<version>${ehcache}</version>
			<properties>
				<ejb.manifest.classpath>true</ejb.manifest.classpath>
			</properties>
		</dependency>
		<dependency>
			<groupId>asm</groupId>
			<artifactId>asm</artifactId>
			<version>${asm}</version>
			<properties>
				<ejb.manifest.classpath>true</ejb.manifest.classpath>
			</properties>
		</dependency>
