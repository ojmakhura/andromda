<project default="install"
    xmlns:ant="jelly:ant"
    xmlns:maven="jelly:maven">

    <!-- ==================================================================
         Deploy/Undeploy the Application
        ================================================================== -->
    <goal name="deploy">
        <maven:maven
            descriptor="${basedir}/app/project.xml"
            goals="deploy"/>
    </goal>

    <goal name="undeploy">
        <maven:maven
            descriptor="${basedir}/app/project.xml"
            goals="undeploy"/>
    </goal>

    <goal name="web">
        <maven:maven
            descriptor="${basedir}/web/project.xml"
            goals="war:install"/>
    </goal>

    <goal name="mda">
        <maven:maven
            descriptor="${basedir}/mda/project.xml"
            goals="pom:install"/>
    </goal>
    
</project>
