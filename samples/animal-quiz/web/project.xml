<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../project.xml</extend>
  	<id>animal-quiz-sample-web</id>
  	<name>Animal Quiz Sample Web</name>
  	<shortDescription>Animal Quiz Sample Web</shortDescription>
  	<description>
  		Contains the Animal Quiz Sample's web application.
  	</description>
	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>animal-quiz-sample-mda</artifactId>
			<version>${pom.currentVersion}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>animal-quiz-sample-common</artifactId>
			<version>${pom.currentVersion}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>animal-quiz-sample-hibernate-ejb</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.0</version>
		</dependency>
		<dependency>
			<groupId>commons-digester</groupId>
			<artifactId>commons-digester</artifactId>
			<version>1.5</version>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>commons-validator</groupId>
			<artifactId>commons-validator</artifactId>
			<version>1.1.2dev-SNAPSHOT</version>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<dependency>
			<groupId>servletapi</groupId>
			<artifactId>servletapi</artifactId>
			<version>2.3</version>
		</dependency>
        <dependency>
            <groupId>struts</groupId>
            <artifactId>struts</artifactId>
            <version>1.2dev-SNAPSHOT</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>displaytag</groupId>
            <artifactId>displaytag</artifactId>
            <version>1.0-b3</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-j2ee</artifactId>
			<version>3.2.3</version>
		</dependency>
    	<!-- XDoclet dependencies -->
    	<dependency>
    		<groupId>xjavadoc</groupId>
    		<artifactId>xjavadoc</artifactId>
        	<version>1.0.2</version>
    	</dependency>
  		<dependency>
     		<groupId>xdoclet</groupId>
      		<artifactId>xdoclet</artifactId>
        	<version>1.2</version>
    	</dependency>
  		<dependency>
     		<groupId>xdoclet</groupId>
      		<artifactId>xdoclet-xdoclet-module</artifactId>
        	<version>1.2</version>
    	</dependency>
    	<dependency>
     		<groupId>xdoclet</groupId>
      		<artifactId>xdoclet-jboss-module</artifactId>
        	<version>1.2</version>
    	</dependency>
    	<dependency>
    		<groupId>xdoclet</groupId>
    		<artifactId>xdoclet-ejb-module</artifactId>
        	<version>1.2</version>
    	</dependency>
    	<!-- This one is needed because jboss-module depends on it -->
    	<dependency>
    		<groupId>xdoclet</groupId>
    		<artifactId>xdoclet-jmx-module</artifactId>
        	<version>1.2</version>
    	</dependency>
		<!-- ejbdoclet depends on this module for some reason -->
    	<dependency>
     		<groupId>xdoclet</groupId>
      		<artifactId>xdoclet-apache-module</artifactId>
        	<version>1.2</version>
    	</dependency>
    	<dependency>
    		<groupId>xdoclet</groupId>
    		<artifactId>xdoclet-web-module</artifactId>
        	<version>1.2</version>
    	</dependency>
		<!-- TLDs -->
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-bean</artifactId>
			<version>1.2dev-SNAPSHOT</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-html</artifactId>
			<version>1.2dev-SNAPSHOT</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-logic</artifactId>
			<version>1.2dev-SNAPSHOT</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
		<dependency>
			<groupId>struts</groupId>
			<artifactId>struts-nested</artifactId>
			<version>1.2dev-SNAPSHOT</version>
			<type>tld</type>
		    <properties>
		      	<war.bundle>true</war.bundle>
		    </properties>
		</dependency>
        <dependency>
            <groupId>struts</groupId>
            <artifactId>struts-tiles</artifactId>
            <version>1.2dev-SNAPSHOT</version>
            <type>tld</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>displaytag</groupId>
            <artifactId>displaytag</artifactId>
            <version>1.0-b3</version>
            <type>tld</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <!-- The next two dependencies (Jasper) are used for precompilation -->
        <dependency>
            <groupId>tomcat</groupId>
            <artifactId>jasper-compiler</artifactId>
            <version>4.0.4</version>
            <type>jar</type>
            <properties>
                <war.bundle>false</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>tomcat</groupId>
            <artifactId>jasper-runtime</artifactId>
            <version>4.0.4</version>
            <type>jar</type>
            <properties>
                <war.bundle>false</war.bundle>
            </properties>
        </dependency>
	</dependencies>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
		<resources>
	      	<resource>
		        <directory>target/src</directory>
	        	<includes>
	        		<include>**/*.properties</include>
	        	</includes>
	      	</resource>
    	</resources>
  	</build>
</project>
