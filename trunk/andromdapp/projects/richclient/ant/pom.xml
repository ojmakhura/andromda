<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.andromdapp.projects</groupId>
        <artifactId>andromda-andromdapp-projects</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>    
    <artifactId>andromda-andromdapp-project-richclient-ant</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA Rich Client Ant Project</name>
    <description>
       A project template for AndroMDA powered projects that do not necessarily have a web browser
       as the client technology. The generated project is for server side code (deployed on
       JBoss), and generic client side code to access published services via remote invocation.
    </description>
    <scm>
      <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/andromdapp/projects/richclient/ant</connection>
      <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/andromdapp/projects/richclient/ant</developerConnection>
      <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <inceptionYear>2005</inceptionYear>    
    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>    
                <excludes>
                    <exclude>**/configuration.xml</exclude>
                </excludes>        
            </resource>
            <resource>
                <directory>${project.basedir}/../../../../andromda-etc/mda/uml</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <targetPath>templates/richclient/ant/mda/src/uml</targetPath> 
            </resource>
            <resource>
                <directory>${project.basedir}/../../../../andromda-etc/mappings</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <targetPath>templates/richclient/ant/mda/src/mappings</targetPath> 
            </resource>
        </resources>
    </build>
    <!-- Skip findbugs reporting, because no source files: Throws 'No classes found to analyze' exception and stops -->
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>findbugs-maven-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
         </plugins>
    </reporting>
</project>
