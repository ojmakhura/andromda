<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>jmi</groupId>
    <artifactId>jmiuml-mof1</artifactId>
    <version>2.0</version>
    <packaging>jar</packaging>
    <name>JMI UML 2.0 MOF 1</name>
    <description>
        The JMI UML 2.0 classes represented using MOF 1
    </description>
    <dependencies>
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>jmiutils</artifactId>
     		<version>20050711</version>
    	</dependency>  
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>mdrapi</artifactId>
     		<version>20050711</version>
    	</dependency>  
     	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>nbmdr</artifactId>
     		<version>20050711</version>
    	</dependency>     	
     	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>openide-util</artifactId>
     		<version>20050711</version>
    	</dependency> 
    	<dependency> 
    		<groupId>jmi</groupId>
      		<artifactId>jmi</artifactId>
     		<version>20030918</version>
    	</dependency>  
    	<dependency> 
    		<groupId>jmi</groupId>
      		<artifactId>mof</artifactId>
     		<version>20030918</version>
    	</dependency>  
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>xmi20reader</artifactId>
     		<version>20050811</version>
    	</dependency> 
    	<dependency> 
    		<groupId>org.netbeans.mdr</groupId>
      		<artifactId>mdrant</artifactId>
     		<version>20030910</version>
    	</dependency> 
    </dependencies>
    <reporting>
        <plugins>
            <plugin>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
        </plugins>
    </reporting>
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <artifactId>maven-clean-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <property name="depClasspath" refid="maven.dependency.classpath"/>
                                <ant antfile="build.xml" dir="." target="generate" inheritRefs="true"/>
                            </tasks> 
                        </configuration>
                    </execution>
                    <execution>
                        <id>site</id>
                        <phase>pre-site</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <property name="depClasspath" refid="maven.dependency.classpath"/>
                                <ant antfile="build.xml" dir="." target="generate" inheritRefs="true"/>
                            </tasks> 
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-multi-source-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default</id>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sourceDirectories>
                                <directory>target/src/java</directory>
                            </sourceDirectories>
                        </configuration>
                    </execution>
                    <execution>
                        <id>site</id>
                        <phase>pre-site</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sourceDirectories>
                                <directory>target/src/java</directory>
                            </sourceDirectories>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>