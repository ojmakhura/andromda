<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-maven-plugins</artifactId>
    <name>AndroMDA Maven Plugins</name>
    <shortDescription>Contains the AndroMDA Maven Plugins</shortDescription>
    <description>
		This module contains AndroMDA Maven plugins used for running AndroMDA, generating
		AndroMDA powered Maven applications, and developing AndroMDA plugins 
		(i.e. cartridges/translation-libraries).
    </description>
    <issueTrackingUrl>${issue.tracking.location}/BrowseProject.jspa?id=10010&amp;decorator=none</issueTrackingUrl>
    <repository>
        <connection>scm:cvs:${repository.connection.mode}:${repository.connection.user}@cvs.sourceforge.net:/cvsroot/andromda:andromda/maven</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/andromda/maven/</url>
    </repository>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}-bootstrap</groupId>
            <artifactId>andromda-site-bootstrap-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
        </dependency>
    </dependencies>
    <reports>
        <report>maven-javadoc-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-junit-report-plugin</report>
    </reports>
</project>
