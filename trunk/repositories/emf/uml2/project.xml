<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../project.xml</extend>
  	<artifactId>andromda-repository-emf-uml2</artifactId>
  	<name>EMF UML2 Repository</name>
  	<shortDescription>AndroMDA EMF UML2 Repository</shortDescription>
  	<description>This EMF UML2 repository module allows AndroMDA to load Eclipse UML2 models into EMF.</description>
  	<package>org.andromda.repositories.emf.uml2</package>
	<dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-repository-emf</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
		<dependency>
			<groupId>emf</groupId>
			<artifactId>emf-common</artifactId>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<groupId>emf</groupId>
			<artifactId>emf-ecore.xmi</artifactId>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<groupId>emf</groupId>
			<artifactId>emf-ecore</artifactId>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<groupId>eclipse-uml2</groupId>
			<artifactId>eclipse-uml2-common</artifactId>
			<version>1.1.1</version>
		</dependency>
		<dependency>
			<groupId>eclipse-uml2</groupId>
			<artifactId>eclipse-uml2</artifactId>
			<version>1.1.1</version>
		</dependency>
	    <dependency>
	      	<groupId>commons-lang</groupId>
	      	<artifactId>commons-lang</artifactId>
	      	<version>2.0</version>
	    </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.12</version>
        </dependency>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-metafacades-emf-uml2</artifactId>
            <version>${pom.currentVersion}</version>
            <type>test</type>
        </dependency>
	</dependencies>	
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>