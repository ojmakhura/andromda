<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-cartridge-testsuite</artifactId>
    <name>Cartridge Test Suite</name>
    <package>org.andromda.cartridge.testsuite</package>
    <description>
  		Provides a Cartridge Test Suite, for testing
  		cartridges throughout the cartridge lifecycle.  
  		Tests include verifying actual vs. expected
  		output.
    </description>
    <shortDescription>Cartridge Test Suite.</shortDescription>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>andromda-core</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>1.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <properties/>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
                <filtering>false</filtering>
            </resource>
        </resources>
    </build>
    <properties/>
    <reports>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-junit-report-plugin</report>
    </reports>
</project>