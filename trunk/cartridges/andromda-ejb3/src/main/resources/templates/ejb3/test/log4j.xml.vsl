<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration
    xmlns:log4j="http://jakarta.apache.org/log4j/"
    debug="false">
    <!-- Modify as necessary for JPA unit testing. If deleted it will be regenerated.
     Generated by test/log4j.xml.vsl in andromda-ejb3-cartridge on $umlUtils.date. -->

    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="(%F:%M:%L) %m%n"/>
        </layout>
    </appender>

    <appender name="logfile" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="target/log4j-test.log"/>
        <param name="Append" value="false"/>
        <param name="MaxFileSize" value="100KB"/>
        <param name="MaxBackupIndex" value="1"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%-5p %d{dd-MM HH:mm:ss,SSS} [%c] (%F:%M:%L) %m%n"/>
        </layout>
   </appender>

## Just use the shortest Entity package, assume that's the top level package in the hierarchy
#set ($pkg="0123456789012345678901234567890123456789012345678901234567890123456789012345678901234567890123456789")
#foreach ($entity in $entities)
#if ($umlUtils.shouldOutput($entity))
#set ($entityPkg = $entity.packageName)
#if ($entityPkg.length() < $pkg.length())
#set ($pkg = $entityPkg)
#end
#end
#end
   <logger name="$pkg">
      <level value="info"/>
      <appender-ref ref="logfile"/>
   </logger>

   <logger name="org.hibernate">
      <level value="info"/>
      <appender-ref ref="logfile"/>
   </logger>

   <root>
      <level value="info"/>
      <appender-ref ref="CONSOLE"/>
   </root>

</log4j:configuration>
