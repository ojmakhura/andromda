<?xml version="1.0" encoding="UTF-8"?>

<cruisecontrol>
    <project name="andromda-all">
        <bootstrappers>
            <currentbuildstatusbootstrapper file="/var/andromda-build/logs/andromda-all/currentbuildstatus.txt"/>
        </bootstrappers>
        <modificationset>
			<!-- try local working copy, cvsroot/module gives zillions of warnings
				 no revision for every Attic file !! -->
            <cvs tag="V3_x_HEAD" localWorkingCopy="/var/andromda-build/andromda-all" />
        </modificationset>
		<!-- set cycle time to 15 minutes -->
        <schedule interval="900">
            <maven goal="scm:update|clean|dist|get-cron-docs|deploy-distribution" projectfile="/var/andromda-build/andromda-all/project.xml" mavenscript="/opt/maven/bin/maven"/>
            <pause starttime="0505" endtime="0605"/>
        </schedule>
        <log dir="/var/andromda-build/logs/andromda-all">
            <merge dir="/var/andromda-build/andromda-all/andromda/target/test-reports"/>
