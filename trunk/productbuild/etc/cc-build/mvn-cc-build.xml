<project name="maven2-build" default="default">
	
	<echo message="basedir:${basedir}"/>
	<property name="andromda.all.dir" value="${basedir}/../.."/>
	
	<target name="default">
		<tstamp>
    		<format property="ant.mvn.log.date" pattern="yyyyMMdd-HHmmss"/>
  		</tstamp>
		<property name="ant.mvn.log" value="ant-mvn-${ant.mvn.log.date}.log"/>
		<exec dir="${andromda.all.dir}" executable="mvn" output="${ant.mvn.log}" append="true">
			<arg value="clean"/>
        </exec> 
		<exec dir="${andromda.all.dir}" executable="mvn" output="${ant.mvn.log}" append="true">
			<arg value="install"/>
        </exec> 
	</target>
	
	
</project>
