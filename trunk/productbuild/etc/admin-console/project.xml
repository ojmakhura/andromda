<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../../project.xml</extend>
    <name>AndroMDA Administration Console</name>
    <groupId>andromda</groupId>
    <id>admin-console</id>
    <package>org.andromda.adminconsole</package>
	<description>
		Generates a table maintenance user interface by discovering database metadata
        at runtime, uses plain JDBC behind the scenes.
	</description>
    <shortDescription>Administration Console application</shortDescription>
    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/andromda:andromda/andromda/etc/adminconsole</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/andromda/productbuild/etc/adminconsole/</url>
    </repository>
    <developers>
        <developer>
            <name>Wouter Zoons</name>
            <id>draftdog</id>
            <email>draftdog@users.sourceforge.net</email>
            <roles>
                <role>Developer</role>
            </roles>
        </developer>
    </developers>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>META-INF/**/*</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>