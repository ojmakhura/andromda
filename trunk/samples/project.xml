<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-samples</artifactId>
    <name>AndroMDA Cartridges</name>
    <groupId>andromda/samples</groupId>
    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/andromda:andromda/cartridges/${pom.artifactId.replaceAll('-cartridge', '')}</connection>
        <url>http://cvs.sourceforge.net/viewcvs.py/andromda/cartridges/${pom.artifactId.replaceAll('-cartridge', '')}/</url>
    </repository>
    <dependencies>
        <dependency>
            <groupId>andromda</groupId>
            <artifactId>UMLMetafacadeModel</artifactId>
            <version>${pom.currentVersion}</version>
            <type>xml.zip</type>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>

        <!-- Unit test classes -->
        <unitTest>
            <includes>
                <include>**/Test*.java</include>
            </includes>
        </unitTest>
        <resources>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src</directory>
                <excludes>
                    <exclude>java/**/*.java</exclude>
                    <exclude>uml/**/*</exclude>
                    <exclude>test/**/*</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>target/src</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>
