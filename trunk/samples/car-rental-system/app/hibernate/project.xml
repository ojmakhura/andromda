<?xml version="1.0" encoding="UTF-8"?>

<project>
  	<extend>../../project.xml</extend>
	<id>car-rental-sample-hibernate-app</id>
	<name>Car Rental Sample Hibernate Application</name>
	<shortDescription>
		The AndromMDA Car Rental System Sample using 
		Hibernate for backend persistence.
	</shortDescription>
	<dependencies>
		<!-- we need this dependency because the default maven-ear-plugin
		     that comes with the current distribution is version 1.2
		     which doesn't do everything we need -->
		<dependency>
			<groupId>maven</groupId>
			<artifactId>maven-ear-plugin</artifactId>
			<version>1.4</version>
			<type>plugin</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-hibernate-ejb</artifactId>
			<version>${pom.currentVersion}</version>
			<type>ejb</type>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-common</artifactId>
			<version>${pom.currentVersion}</version>
	      	<properties>
	        	<ear.module>true</ear.module>
	     	</properties>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-hibernate-sar</artifactId>
			<version>${pom.currentVersion}</version>
			<type>sar</type>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>car-rental-sample-web</artifactId>
			<version>${pom.currentVersion}</version>
			<type>war</type>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
				<ear.appxml.war.context-root>/carrental-ejb</ear.appxml.war.context-root>
	     	</properties>
		</dependency>
   	    <!-- Hibernate dependencies -->
  		<dependency>
     		<groupId>commons-beanutils</groupId>
      		<artifactId>commons-beanutils</artifactId>
        	<version>1.6.1</version>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
    	</dependency>   
  		<dependency>
     		<groupId>commons-collections</groupId>
      		<artifactId>commons-collections</artifactId>
        	<version>3.0</version>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
    	</dependency>  
  		<dependency>
     		<groupId>commons-lang</groupId>
      		<artifactId>commons-lang</artifactId>
        	<version>2.0</version>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
    	</dependency> 
  		<dependency>
     		<groupId>commons-logging</groupId>
      		<artifactId>commons-logging</artifactId>
        	<version>1.0.3</version>
	      	<properties>
	        	<ear.bundle>true</ear.bundle>
	     	</properties>
    	</dependency> 
  		<dependency>
     		<groupId>hibernate</groupId>
      		<artifactId>hibernate</artifactId>
        	<version>2.1.2</version>
			<properties>
				<ear.bundle>true</ear.bundle>
			</properties>
    	</dependency>     	
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib</artifactId>
			<version>2.0-rc2</version>
			<properties>
				<ear.bundle>true</ear.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.4</version>
			<properties>
				<ear.bundle>true</ear.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>odmg</groupId>
			<artifactId>odmg</artifactId>
			<version>3.0</version>
			<properties>
				<ear.bundle>true</ear.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>ehcache</groupId>
			<artifactId>ehcache</artifactId>
			<version>0.7</version>
			<properties>
				<ear.bundle>true</ear.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>asm</groupId>
			<artifactId>asm</artifactId>
			<version>1.4.1</version>
			<properties>
				<ear.bundle>true</ear.bundle>
			</properties>
		</dependency>
	</dependencies> 

</project>
