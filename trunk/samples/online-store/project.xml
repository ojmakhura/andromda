<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../project.xml</extend>
    <id>online-store</id>
    <name>The Online Store Sample</name>
    <shortDescription>The Online Store Sample</shortDescription>
    <description>
  		Contains the Online Store Project. This sample is part of the
        Bpm4Struts documentation and is explained in the how-to.
        It should only be used to show the web-part of the application.
        At a later point in time we might add persistence and business
        logic.
    </description>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>META-INF/**/*</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
