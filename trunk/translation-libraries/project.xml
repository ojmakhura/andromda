<?xml version="1.0" encoding="UTF-8"?>

<project>
    <extend>../project.xml</extend>
    <artifactId>andromda-translation-libraries</artifactId>
    <name>AndroMDA Translation Libraries</name>
    <issueTrackingUrl>${issue.tracking.location}/BrowseProject.jspa?id=10002&amp;decorator=none</issueTrackingUrl>
    <repository>
        <connection>scm:cvs:${repository.connection.mode}:${repository.connection.user}@andromda.cvs.sourceforge.net:/cvsroot/andromda:andromda/translation-libraries/${pom.artifactId.replaceAll('-library', '')}</connection>
        <url>http://andromda.cvs.sourceforge.net/andromda/translation-libraries/${pom.artifactId.replaceAll('-library', '')}/</url>
    </repository>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>${pom.groupId}-core</artifactId>
            <version>${pom.currentVersion}</version>
        </dependency>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>andromda-site-plugin</artifactId>
            <version>${pom.currentVersion}</version>
            <type>plugin</type>
        </dependency>
    </dependencies>
    <!-- restrict the reports generated -->
    <reports>
        <report>maven-jxr-plugin</report>
        <report>maven-javadoc-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-pmd-plugin</report>
        <report>maven-jdepend-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-tasklist-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-junit-report-plugin</report>
    </reports>
</project>
