<cartridge name="database">
	
	<!-- templateObjects -->
    	
    <templateObject 
    	name="databaseTemplateObject"
    	className="org.andromda.cartridges.database.DatabaseTemplateObject">
    	<property reference="maxSqlNameLength"/>
    </templateObject>  

    <templateObject 
    	name="stringUtils"
    	className="org.andromda.core.common.StringUtilsHelper"/>  
    	
	<!-- template definitions -->
	
	<template 
		path="templates/database/create-schema.vsl" 
		outputPattern="create-schema.sql" 
		outlet="scripts" 
		overwrite="true"
		outputToSingleFile="true">
		<modelElements variable="tables">
            <modelElement stereotype="Entity"/>
            <modelElement stereotype="readOnlyEntity"/>
		</modelElements>
	</template>

	<template 
		path="templates/database/create-table.vsl" 
		outputPattern="create-table-{1}.sql" 
		outlet="scripts" 
		overwrite="true">
		<modelElements variable="table">
            <modelElement stereotype="Entity"/>
            <modelElement stereotype="readOnlyEntity"/>
		</modelElements>
	</template>

	<template 
		path="templates/database/drop-schema.vsl" 
		outputPattern="drop-schema.sql" 
		outlet="scripts" 
		overwrite="true"
		outputToSingleFile="true">
		<modelElements variable="tables">
            <modelElement stereotype="Entity"/>
            <modelElement stereotype="readOnlyEntity"/>
		</modelElements>
	</template>
		
	<template 
		path="templates/database/create-sequence.vsl" 
		outputPattern="create-sequences.sql" 
		outlet="scripts" 
		overwrite="true"
		outputToSingleFile="true">
		<modelElements variable="tables">
            <modelElement stereotype="Entity"/>
            <modelElement stereotype="readOnlyEntity"/>
		</modelElements>
	</template>

    <template
        path="templates/database/create-foreign-keys.vsl"
        outputPattern="create-foreign-keys.sql"
        outlet="scripts"
        overwrite="true"
        outputToSingleFile="true">
        <modelElements variable="tables">
            <modelElement stereotype="Entity"/>
            <modelElement stereotype="readOnlyEntity"/>
        </modelElements>
    </template>

    <template
        path="templates/database/create-dummy-load.vsl"
        outputPattern="create-dummy-load.sql"
        outlet="scripts"
        overwrite="true"
        outputToSingleFile="true">
        <modelElements variable="tables">
            <modelElement stereotype="Entity"/>
            <modelElement stereotype="readOnlyEntity"/>
        </modelElements>
    </template>

</cartridge>
