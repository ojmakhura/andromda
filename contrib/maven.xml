<project default="install"
         xmlns:j="jelly:core"
  		 xmlns:ant="jelly:ant"
  		 xmlns:maven="jelly:maven">
  		 
    <goal name="install">
        <attainGoal name="multiproject:install"/>
    </goal>
    
    <!-- ==================================================================
            CC Build
         ================================================================== -->
    <goal name="cc-build">
        <attainGoal name="install"/>
        <attainGoal name="docs"/>
    </goal>

    <!-- ==================================================================
            Build the docs
         ================================================================== -->
    <goal name="docs">
        <maven:maven
            descriptor="documentation/project.xml"
            goals="xdoc"/>
    </goal>

    <goal name="clean">
        <attainGoal name="multiproject:clean"/>
        <attainGoal name="clean:clean"/>
		<!-- get rid of all the log files -->
		<ant:delete>
			<ant:fileset dir=".">
				<ant:include name="**/*.log*"/>
				<ant:exclude name="maven.log"/>
			</ant:fileset>
		</ant:delete>
    </goal>
  		 
</project>


