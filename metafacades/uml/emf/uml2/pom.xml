<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.metafacades</groupId>
        <artifactId>andromda-uml-metafacades</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-metafacades-emf-uml2</artifactId>
    <packaging>xml.zip</packaging>
  	<name>AndroMDA EMF UML2 Metafacades</name>
  	<description>
  		The Eclipse EMF UML2 metafacades.  This is the set of EMF UML 2 metafacades
  		implementations.  These implement the common UML metafacades.
  	</description>
    <issueManagement>
        <system>jira</system>
        <url>http://galaxy.andromda.org/jira/BrowseProject.jspa?id=10004</url>
    </issueManagement>
    <scm>
        <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/metafacades/uml/emf/uml2</connection>
        <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/metafacades/uml/emf/uml2</developerConnection>
        <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
	<dependencies>
        <dependency>
            <groupId>org.andromda.translationlibraries</groupId>
            <artifactId>andromda-ocl-validation-library</artifactId>
            <version>${project.version}</version>
        </dependency> 
        <dependency>
            <groupId>org.andromda.metafacades</groupId>
            <artifactId>andromda-metafacades-uml</artifactId>
            <version>${project.version}</version>
        </dependency>
		<!--dependency> 
    		<groupId>org.eclipse.uml2</groupId>
      		<artifactId>common</artifactId>
     		<version>1.1.1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.core</groupId>
                    <artifactId>runtime</artifactId>
                </exclusion>
            </exclusions>
    	</dependency-->    
		<dependency> 
    		<groupId>org.eclipse</groupId>
      		<artifactId>uml2</artifactId>
     		<version>1.1.1</version>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.core</groupId>
                    <artifactId>runtime</artifactId>
                </exclusion>
            </exclusions>
    	</dependency>
        <dependency> 
            <groupId>org.eclipse.uml2</groupId>
            <artifactId>resources</artifactId>
            <version>1.1.0</version>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.core</groupId>
                    <artifactId>runtime</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>common</artifactId>
            <version>2.1.0</version>
            <exclusions>
                <exclusion>
                    <groupId>org.eclipse.core</groupId>
                    <artifactId>runtime</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
	</dependencies>	
    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <plugins>  
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-bootstrap-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-model-archiver-plugin</artifactId>
                <configuration>
                    <modelSourceDirectory>src/main/uml</modelSourceDirectory>
                </configuration>
            </plugin>            
            <plugin>
                <groupId>org.andromda.maven.plugins.site</groupId>
                <artifactId>andromda-site-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>namespace-transform</id>
                        <goals>
                            <goal>namespace-xsl</goal>
                        </goals>
                        <configuration> 
                            <namespaceDocumentPath>${project.basedir}/target/classes/META-INF/andromda/namespace.xml</namespaceDocumentPath>
                        </configuration> 
                    </execution>
                </executions>
            </plugin>
        </plugins>
 		<resources>
	      	<resource>
		        <directory>src/main/java</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	      	</resource>
	      	<resource>
		        <directory>src/main/resources</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
	      	<resource>
		        <directory>../../common/src</directory>
	        	<includes>
	        		<include>META-INF/**/*</include>
	        	</includes>
	      	</resource>
	  		<resource>
				<directory>target/src</directory>
	        	<includes>
	        		<include>**/*.properties</include>
	        	</includes>
	  		</resource>
    	</resources>
    </build>    
</project>