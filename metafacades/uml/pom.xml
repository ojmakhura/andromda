<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.metafacades</groupId>
        <artifactId>andromda-metafacades</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-uml-metafacades</artifactId>
    <packaging>pom</packaging>
    <name>AndroMDA UML Metafacades</name>
    <description>
        The core UML metafacade libraries. Each metafacade library within this
        project is used to access a UML meta model.
        These are generated by the 'meta' cartridge.
    </description>
    <scm>
        <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/metafacades/uml</connection>
        <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/metafacades/uml</developerConnection>
        <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>org.andromda</groupId>
            <artifactId>andromda-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <dependency>
            <groupId>org.andromda.translationlibraries</groupId>
            <artifactId>andromda-ocl-translation-core</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-bootstrap-plugin</artifactId>
                    <version>${project.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>run</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <buildSourceDirectory>${project.basedir}/target/src</buildSourceDirectory>
                        <lastModifiedCheck>true</lastModifiedCheck>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-maven-plugin</artifactId>
                    <version>${project.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>run</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <buildSourceDirectory>${project.basedir}/target/src</buildSourceDirectory>
                        <lastModifiedCheck>true</lastModifiedCheck>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-bootstrap-install-plugin</artifactId>
                    <version>${project.version}</version>
                    <executions>
                        <execution>
                            <goals>
                                <goal>install</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <installDirectory>${basedir}/../../../lib</installDirectory>
                    </configuration>
                </plugin>
                <plugin>
                    <extensions>true</extensions>
                    <groupId>org.andromda.maven.plugins</groupId>
                    <artifactId>andromda-model-archiver-plugin</artifactId>
                    <version>${project.version}</version>
                    <configuration>
                        <modelSourceDirectory>src/uml</modelSourceDirectory>
                        <generateJar>true</generateJar>
                        <buildSourceDirectory>target/src</buildSourceDirectory>
                    </configuration>
                    <!--dependencies>
                        <dependency>
                            <groupId>org.codehaus.plexus</groupId>
                            <artifactId>plexus-utils</artifactId>
                            <version>${plexus.util.version}</version>
                        </dependency>
                   </dependencies-->
                </plugin>
            </plugins>
        </pluginManagement>
        <resources>
            <resource>
                <directory>src/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src</directory>
                <includes>
                    <include>META-INF/**/*</include>
                </includes>
            </resource>
            <resource>
                <directory>target/src</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/java</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </testResource>
            <testResource>
                <directory>src/test/conf</directory>
                <includes>
                    <include>**/*.xml</include>
                    <include>**/*.properties</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/uml</directory>
                <includes>
                    <include>**/*</include>
                </includes>
            </testResource>
        </testResources>
    </build>
    <modules>
        <module>common</module>
        <!-- Comment out uml14 for performance improvement if not using uml14 models -->
        <module>uml14</module>
        <module>emf/uml22</module>
        <module>emf/uml2</module>
    </modules>
    <properties>
        <model.file>${project.basedir}/src/main/uml/${project.artifactId}.xml.zip</model.file>
        <maven.andromda.model.uri>jar:file:${model.file}!/${project.artifactId}.xml</maven.andromda.model.uri>
        <maven.build.src>${project.basedir}/target/src</maven.build.src>
        <maven.src.dir>${project.basedir}/src/main</maven.src.dir>
    </properties>
</project>