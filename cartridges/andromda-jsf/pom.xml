<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.cartridges</groupId>
        <artifactId>andromda-cartridges</artifactId>
        <version>3.1-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-jsf-cartridge</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA JSF Cartridge</name>
    <description>
        The JSF cartridge is used to generate JSF applications from UML models using both static and dynamic model elements.
        Generated applications have default security and internationalization implementations and can be deployed as they are.
    </description>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>${pom.artifactId}-components</artifactId>
            <version>${version}</version>
        </dependency>
    </dependencies>
    <build>
        <filters>
            <filter>${basedir}/mda.properties</filter>
        </filters>  
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <buildSourceDirectory>${basedir}/target/src</buildSourceDirectory>
                    <configurationUri>file:${basedir}/../conf/andromda.xml</configurationUri>
                    <lastModifiedCheck>true</lastModifiedCheck>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.andromda.cartridges</groupId>
                        <artifactId>andromda-meta-cartridge</artifactId>
                        <version>${version}</version>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-datatype</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-webservice</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-service</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-process</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-meta</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-xml</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-persistence</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                    <dependency>
                        <groupId>org.andromda.profiles.uml14</groupId>
                        <artifactId>andromda-profile-presentation</artifactId>
                        <version>${version}</version>
                        <type>xml.zip</type>
                    </dependency>
                </dependencies>    
            </plugin>
        </plugins> 
    </build> 
</project>