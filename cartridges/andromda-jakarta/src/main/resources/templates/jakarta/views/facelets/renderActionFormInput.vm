##
## A macro that renders the appropriate action form input field
##
## parameters:
##     o  $parameter - the actual parameter to render
##     o  $ownerParameter - the parameter that is the owner of this parameter (in the case of complex objects)
##
#macro(renderActionInputPrimeFaces $parameter $ownerParameter $ident)
#if ($parameter.backingListName)
#if ($ownerParameter.type.hasStereotype('Entity'))
#set ($propertyId = $parameter.getFormPropertyId($ownerParameter))
#set ($valuePropertyName = ${parameter.getFormPropertyName($ownerParameter)})
#else
#set ($propertyId = $parameter.name)
#set ($valuePropertyName = $parameter.name)
#end
#set ($backingListName = $parameter.backingListName)
#set ($backingValueName = $parameter.backingValueName)
#else
#set ($propertyId = $parameter.getFormPropertyId($ownerParameter))
#set ($valuePropertyName = ${parameter.getFormPropertyName($ownerParameter)})
#set ($backingListName = ${parameter.getBackingListName($ownerParameter)})
#set ($backingValueName = ${parameter.getBackingValueName($ownerParameter)})
#end
#set ($formValuePropertyName = "${formName}.${valuePropertyName}")
#if(!$parameter.inputTable)
#if ($parameter.inputMultibox || $parameter.inputCheckbox)
#set($fclass = "form-check-label")
#else
#set($fclass = "form-label")
#end
${ident}<label id="${propertyId}_label" class="$fclass" for="${propertyId}" value="#{messages['$parameter.messageKey']}">#{messages['$parameter.messageKey']}:</label>
#end
#if ($parameter.type.dateType)
${ident}<input id="$propertyId" class="form-control" type="date" name="${propertyId}" value="#{${formValuePropertyName}}" label="#{messages['$parameter.messageKey']}:"#if(${parameter.readOnly}) readonly#end#if(${parameter.required}) required="true"#end navigator="true" pattern="$parameter.format" showOn="button">
## ${ident}    <f:convertDateTime pattern="$parameter.format"/>
${ident}</input>
#elseif ($parameter.inputCheckbox)
${ident}<input id="$propertyId" class="form-check-input" type="checkbox" name="${propertyId}" value="#{${formValuePropertyName}}"  onLabel="#{messages['yes']}" offLabel="#{messages['no']}" onIcon="ui-icon-check" offIcon="ui-icon-close"#if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end/>
#elseif ($parameter.type.enumeration)
${ident}<select #if ($multiSelect)multiple size="5"#end id="$propertyId" class="form-control" name="${propertyId}" value="#{${formValuePropertyName}}" label="#{messages['$parameter.messageKey']}:" #if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end>
#if(!$parameter.required)
${ident}    <option value=""></option>
#end
#foreach($literal in $parameter.type.literals)
${ident}    <option value=#if($literal.value)"${literal.value}"#elseif(${literal.defaultValue})${literal.defaultValue}#else"${literal.name}"#end>$literal.name</option>
#end
${ident}</select>
#elseif ($parameter.inputSelect)
#set ($multiSelect = $parameter.many || $parameter.type.collectionType || $parameter.type.arrayType)
#set ($selectBoxType = "selectOneMenu")
#if ($multiSelect)
#set ($selectBoxType = "selectManyMenu")
#end
${ident}    <h:$selectBoxType id="$propertyId" class="form-control" value="#{${formValuePropertyName}}" label="#{messages['$parameter.messageKey']}:" required="$parameter.required" readonly="$parameter.readOnly">
#if(!$parameter.required)
${ident}        <f:selectItem itemLabel=""/>
#end
${ident}        <f:selectItems value="#{${formName}.${backingListName}}" />
${ident}    </h:$selectBoxType>
#elseif ($parameter.inputFile)
${ident}<input id="$propertyId" class="form-control" type="file" value="#{${formValuePropertyName}}" label="#{messages['$parameter.messageKey']}:" #if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end/>
#elseif ($parameter.inputMultibox)
${ident}<input id="$propertyId" class="form-check-input" type="checkbox" name="${propertyId}" value="#{${formValuePropertyName}}" label="#{messages['$parameter.messageKey']}:" #if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end>
##${ident}    <f:selectItems value="#{${formName}.${backingListName}}" />
${ident}</input>
#elseif ($parameter.inputRadio)
${ident}<input id="$propertyId" class="form-control" type="radio" name="${propertyId}" value="#{${formValuePropertyName}}" label="#{messages['$parameter.messageKey']}:" #if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end>
##${ident}<f:selectItems value="#{${formName}.${backingListName}}" />
${ident}</input>
#elseif ($parameter.plainText)
${ident}<input id="$propertyId" class="form-control" type="text" name="${propertyId}" value="#{${formValuePropertyName}}"#if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end/>
#elseif ($parameter.inputSecret)
${ident}<input id="$propertyId" class="form-control" type="password" name="${propertyId}" value="#{${formValuePropertyName}}"#if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end/>
#elseif ($parameter.inputTextarea)
${ident}<textarea id="$propertyId" name="${propertyId}" value="#{${formValuePropertyName}}"#if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end/>
#elseif ($parameter.inputTable)
${ident}<h:dataTable id="$propertyId" var="row" value="#{${formValuePropertyName}}" rows="10" paginator="true" paginatorPosition="top" paginatorAlwaysVisible="false" emptyMessage="#{messages['empty.result.set']}">
#if($parameter.inputTableIdentifierColumns)
#foreach($column in $parameter.inputTableIdentifierColumns.split(","))
${ident}    <h:column sortBy="$column">
${ident}        <f:facet name="header">
${ident}            <h:outputText id="columnHeader_$column" value="#{messages['$column']}"/>
${ident}        </f:facet>
${ident}        <h:outputText id="$column" value="#{row.$column}">
${ident}        </h:outputText>
${ident}    </h:column>
#end
#else
#foreach($attr in $parameter.type.attributes)
${ident}    <h:column sortBy="$attr.name">
${ident}        <f:facet name="header">
${ident}            <h:outputText id="columnHeader_$attr.name" value="#{messages['$column']}"/>
${ident}        </f:facet>
${ident}        <h:outputText id="$attr.name" value="#{row.$attr.name}">
${ident}        </h:outputText>
${ident}    </h:column>
#end
#end
${ident}</h:dataTable>
#else
${ident}<input id="$propertyId" class="form-control" type="text" name="${propertyId}" value="#{${formValuePropertyName}}"#if($parameter.readOnly) readonly#end#if(${parameter.required}) required="true"#end/>
#end
#end