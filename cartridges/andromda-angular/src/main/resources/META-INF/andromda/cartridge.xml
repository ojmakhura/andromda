	<template
        path="templates/angular/app/view/view.component.scss.vsl"
        outputPattern="${view.filePath}.scss"
        outlet="views"
        overwrite="true">
        <modelElements variable="view">
            <modelElement>
                <type name="org.andromda.cartridges.angular.metafacades.AngularView">
