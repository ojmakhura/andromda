<?xml version="1.0" encoding="UTF-8"?>

<project>
	<extend>../project.xml</extend>
  	<id>andromda-cartridges</id>
  	<groupId>andromda-cartridges</groupId>
  	<name>AndroMDA Cartridges</name>
  	<repository>
    	<connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot:andromda/${pom.artifactId.replaceAll('andromda-', '').replaceAll('-cartridge', '')}</connection>
    	<url>http://cvs.sourceforge.net/viewcvs.py/andromda/${pom.artifactId.replaceAll('andromda-', '').replaceAll('-cartridge', '')}</url>
  	</repository>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
    	<unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    
    	<!-- Unit test classes -->
    	<unitTest>
	      	<includes>
	        	<include>**/Test*.java</include>
	     	</includes>
    	</unitTest>
    
		<resources>
			<resource>
				<directory>src/java</directory>
	  			<includes>
	    			<include>**/*.xml</include>
	    			<include>**/*.properties</include>
	  			</includes>
	  		</resource>
	  		<resource>
				<directory>src</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        		<exclude>uml/**/*</exclude>
	        		<exclude>test/**/*</exclude>
	        	</excludes>
	  		</resource>
	  		<resource>
				<directory>target/src/andromda/meta</directory>
	        	<excludes>
	        		<exclude>**/*.java</exclude>
	        	</excludes>
	  		</resource>
		</resources>
  	</build>
  	
  	<!-- restrict the reports generated -->
  	<reports>
  		<report>maven-jxr-plugin</report>
  		<report>maven-javadoc-plugin</report>
  	</reports>

</project>
