<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.cartridges.support</groupId>
        <artifactId>andromda-cartridges-support</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-webservice-client</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA Web Service Client</name>
    <description>Contains a simple webservice client (that also contains Spring support) contained in a single jar, that currently works with "wrapped" style services</description>
    <scm>
      <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/cartridges/support/webservice-client</connection>
      <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/cartridges/support/webservice-client</developerConnection>
      <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>wsdl4j</groupId>
            <artifactId>wsdl4j</artifactId>
            <version>1.6.2</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.ws.commons</groupId>
            <artifactId>XmlSchema</artifactId>
            <version>1.3.1</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2</artifactId>
            <version>1.2</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.apache.ws.commons.axiom</groupId>
            <artifactId>axiom-api</artifactId>
            <version>1.2.7</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>xml-apis</groupId>
                    <artifactId>xml-apis</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.apache.ws.commons.axiom</groupId>
            <artifactId>axiom-impl</artifactId>
            <version>1.2.7</version>
            <optional>true</optional>
            <exclusions>
                <exclusion>
                    <groupId>xml-apis</groupId>
                    <artifactId>xml-apis</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>woodstox</groupId>
            <artifactId>wstx-asl</artifactId>
            <version>3.2.7</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-httpclient</groupId>
            <artifactId>commons-httpclient</artifactId>
            <version>3.1</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <version>1.3</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring</artifactId>
            <version>2.0.8</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>com.tonicsystems</groupId>
            <artifactId>jarjar</artifactId>
            <version>0.6</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>stax</groupId>
            <artifactId>stax-api</artifactId>
            <version>1.0.1</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <build>        
        <plugins>
            <plugin>
                <groupId>com.pyx4me</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>2.0.4</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <obfuscate>true</obfuscate>
                    <proguardInclude>${basedir}/conf/proguard.conf</proguardInclude>
                    <assembly>
                        <inclusions>
                            <inclusion>
                                <groupId>org.apache.axis2</groupId>
                                <artifactId>axis2</artifactId>
                                <filter>!javax/xml/namespace/QName*,!**/*.xsl</filter>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.ws.commons.axiom</groupId>
                                <artifactId>axiom-api</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.ws.commons.axiom</groupId>
                                <artifactId>axiom-impl</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>wsdl4j</groupId>
                                <artifactId>wsdl4j</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>stax</groupId>
                                <artifactId>stax-api</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>woodstox</groupId>
                                <artifactId>wstx-asl</artifactId>
                                <filter>!javax/xml/namespace/QName*</filter>
                            </inclusion>
                            <inclusion>
                                <groupId>commons-codec</groupId>
                                <artifactId>commons-codec</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>commons-lang</groupId>
                                <artifactId>commons-lang</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>commons-beanutils</groupId>
                                <artifactId>commons-beanutils</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>commons-httpclient</groupId>
                                <artifactId>commons-httpclient</artifactId>
                            </inclusion>
                            <inclusion>
                                <groupId>org.apache.ws.commons</groupId>
                                <artifactId>XmlSchema</artifactId>
                            </inclusion>
                        </inclusions>
                    </assembly>
                    <maxMemory>1024m</maxMemory>
                    <libs>
                        <lib>${java.home}/lib/rt.jar</lib>
                    </libs>
                    <outjar>webservice-client.jar</outjar>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.0</version>
                <executions>
                    <execution>
                        <id>create-standalone-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <property name="dependencyClasspath" refid="maven.runtime.classpath"/>
                                <taskdef name="jarjar" classname="com.tonicsystems.jarjar.JarJarTask" classpath="${dependencyClasspath}"/>
                                <jarjar jarfile="${project.build.directory}/${project.artifactId}-${project.version}.jar">
                                    <fileset dir="${project.basedir}/src/main/resources"/>
                                    <zipfileset src="${project.build.directory}/webservice-client.jar"
                                        excludes="**/*/axis2_default.xml,
                                                  **/*/javax.xml.stream.XMLInputFactory,
                                                  **/*/javax.xml.stream.XMLOutputFactory,
                                                  **/*/pom.xml,
                                                  **/*/pom.properties,
                                                  **/*.html,
                                                  **/*.mar"/>
                                    <rule pattern="org.apache.axis2.receivers.**" result="org.apache.axis2a.receivers.@1"/>
                                    <rule pattern="org.apache.axis2.transport.jms.**" result="org.apache.axis2a.transport.jms.@1"/>
                                    <rule pattern="org.apache.axis2.transport.tcp.**" result="org.apache.axis2a.transport.tcp.@1"/>
                                    <rule pattern="org.apache.axis2.transport.local.**" result="org.apache.axis2a.transport.local.@1"/>
                                    <rule pattern="org.apache.axis2.transport.http.**" result="org.apache.axis2a.transport.http.@1"/>
                                    <rule pattern="org.apache.axis2.builder.**" result="org.apache.axis2a.builder.@1"/>
                                    <rule pattern="org.apache.axis2.engine.**" result="org.apache.axis2a.engine.@1"/>
                                    <rule pattern="com.ibm.wsdl.factory.**" result="com.ibm.wsdla.factory.@1"/>
                                    <rule pattern="com.ctc.wstx.stax.**" result="com.ctc.wstxa.stax.@1"/>
                                    <rule pattern="com.ctc.wstx.compat.**" result="com.ctc.wstxa.compat.@1"/>
                                    <rule pattern="org.apache.axiom.om.**" result="org.apache.axioma.om.@1"/>
                                    <rule pattern="org.apache.axiom.soap.impl.llom.**" result="org.apache.axioma.soap.impl.llom.@1"/>
                                    <rule pattern="org.apache.axis2.deployment.**" result="org.apache.axis2a.deployment.@1"/>
                                    <rule pattern="META*.services.*" result="META@1.servicesa.@1"/>
                                </jarjar>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>