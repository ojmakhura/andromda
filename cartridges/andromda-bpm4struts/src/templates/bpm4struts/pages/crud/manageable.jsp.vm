#macro ( renderJavascriptCopyRow $manageable )
#foreach($member in $manageable.manageableMembers)
document.forms['${manageable.formBeanName}'].elements['${member.name}']## no newline
#set($property = "row.${member.name}")## by default we take the property straight for the row value object
#if ($member.type.fullyQualifiedName == 'boolean' || $member.type.fullyQualifiedName == 'java.lang.Boolean')
.checked=${${property}};## no newline
