<?xml version="1.0" encoding="UTF-8"?>

<project>
	<extend>../project.xml</extend>
  	<id>andromda-templateengines</id>
  	<groupId>andromda</groupId>
  	<name>AndroMDA Template Engines</name>
  	<description>
  		The collection of Template Engine implementations.
  	</description>
  	<repository>
    	<connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/andromda:andromda/templateengines/${pom.artifactId.replaceAll('andromda-templateengine-', '')}</connection>
    	<url>http://cvs.sourceforge.net/viewcvs.py/andromda/templateengines/${pom.artifactId.replaceAll('andromda-templateengine-', '')}</url>
  	</repository>
  	<build>
    	<sourceDirectory>src/java</sourceDirectory>
    	<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    	<!-- Unit test classes -->
    	<unitTest>
	      	<includes>
	        	<include>**/*Test.java</include>
	     	</includes>
    	</unitTest>
		<resources>
			<resource>
				<directory>src/test/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>	
  	</build>
  	
  	<!-- restrict the reports generated -->
  	<reports>
  		<report>maven-jxr-plugin</report>
  		<report>maven-javadoc-plugin</report>
  	    <report>maven-simian-plugin</report>
  	    <report>maven-pmd-plugin</report>
    	<report>maven-jdepend-plugin</report>
    	<report>maven-faq-plugin</report>
    	<report>maven-tasklist-plugin</report>
    	<report>maven-file-activity-plugin</report>
    	<report>maven-developer-activity-plugin</report>
    	<report>maven-junit-report-plugin</report>
  	</reports>

</project>
