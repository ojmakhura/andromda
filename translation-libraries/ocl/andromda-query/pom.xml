<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.translationlibraries</groupId>
        <artifactId>andromda-ocl-translation-libraries</artifactId>
        <version>4.0-M1-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-ocl-query-library</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA OCL Query Translation-Library</name>
    <description>Performs translation of OCL query expressions to different query languages, currently supports Enterprise Java Bean Query Language and Hibernate Query Language.</description>
    <dependencies>
        <dependency>
            <groupId>${pom.groupId}</groupId>
            <artifactId>andromda-ocl-translation-core</artifactId>
            <version>${pom.version}</version>
        </dependency>
    </dependencies>
    <build>
        <filters>
            <filter>mda.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-translation-library-plugin</artifactId>  
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src</directory>
                <excludes>
                    <exclude>**/*.java</exclude>
                    <exclude>test/**/*</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>