<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.andromda.translationlibraries</groupId>
        <artifactId>andromda-ocl-translation-libraries</artifactId>
        <version>3.4-SNAPSHOT</version>
    </parent>
    <artifactId>andromda-ocl-validation-library</artifactId>
    <packaging>jar</packaging>
    <name>AndroMDA OCL Validation Translation-Library</name>
    <description>Translates OCL into validation code for any platform.</description>
    <issueManagement>
        <system>jira</system>
        <url>http://galaxy.andromda.org/jira/BrowseProject.jspa?id=10002</url>
    </issueManagement>
    <scm>
        <connection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/translation-libraries/ocl/andromda-validation</connection>
        <developerConnection>scm:svn:https://andromda.svn.sourceforge.net/svnroot/andromda/trunk/ocl/andromda-validation</developerConnection>
        <url>http://andromda.svn.sourceforge.net/</url>
    </scm>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>andromda-ocl-translation-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.andromda.metafacades</groupId>
            <artifactId>andromda-metafacades-uml</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>        
        </dependency> 
    </dependencies>
    <build>
        <filters>
            <filter>mda.properties</filter>
        </filters>
        <plugins>
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-bootstrap-install-plugin</artifactId>
                <configuration>
                    <installDirectory>${basedir}/../../../lib</installDirectory>
                </configuration>
            </plugin>            
            <plugin>
                <groupId>org.andromda.maven.plugins</groupId>
                <artifactId>andromda-bootstrap-plugin</artifactId>  
                <configuration>
                    <configurationUri>file:${basedir}/../conf/test/andromda.xml</configurationUri>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.andromda.maven.plugins.site</groupId>
                <artifactId>andromda-site-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <id>namespace-transform</id>
                        <goals>
                            <goal>namespace-xsl</goal>
                        </goals>
                        <configuration> 
                            <namespaceDocumentPath>${pom.basedir}/src/META-INF/andromda/namespace.xml</namespaceDocumentPath>
                        </configuration> 
                    </execution>
                </executions>
            </plugin>            
        </plugins>
    </build>
</project>